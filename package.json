{
  "name": "delacy",
  "version": "1.0.0",
  "description": "A spiritual successor to AceBot.",
  "license": "AGPL-3.0-or-later",
  "author": {
    "name": "Jarrett Aiken",
    "email": "jarrett.aiken@achl.fr",
    "url": "https://achl.fr"
  },
  "homepage": "https://github.com/Aceheliflyer/DeLacy#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Aceheliflyer/DeLacy.git"
  },
  "bugs": {
    "url": "https://github.com/Aceheliflyer/DeLacy/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build:dev": "run-s clean build:prod",
    "build:prod": "tsc",
    "clean": "rimraf dist",
    "preinstall": "npx only-allow pnpm",
    "lint": "run-s lint:*",
    "lint:md": "markdownlint-cli2-fix '**/*.md' '#node_modules'",
    "lint:package": "prettier-package-json --write ./package.json --expand-users true",
    "lint:spelling": "cspell . --dot",
    "lint:ts": "prettier-standard '**/*.{js,ts}' && ts-standard --verbose --fix | snazzy",
    "start": "node dist/index.js",
    "start:dev": "tsc-watch --onSuccess 'node dist/index.js'"
  },
  "dependencies": {
    "@sapphire/framework": "^4.4.1",
    "common-tags": "^1.8.2",
    "discord.js": "^14.9.0",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "@ksmithut/prettier-standard": "^0.1.6",
    "@types/common-tags": "^1.8.1",
    "@types/node": "^18.15.12",
    "cspell": "^6.31.1",
    "markdownlint-cli2": "^0.6.0",
    "npm-run-all": "^4.1.5",
    "prettier-package-json": "^2.8.0",
    "rimraf": "^5.0.0",
    "snazzy": "^9.0.0",
    "ts-standard": "^12.0.2",
    "tsc-watch": "^6.0.0",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=16.9.0",
    "pnpm": ">=6.0.0"
  },
  "pnpm": {
    "overrides": {
      "json5@>=2.0.0 <2.2.2": ">=2.2.2",
      "minimist@>=1.0.0 <1.2.6": ">=1.2.6",
      "minimatch@<3.0.5": ">=3.0.5"
    }
  }
}
